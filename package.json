{
  "private": true,
  "name": "focal",
  "scripts": {
    "clean-all": "rm -rf ./node_modules && rm -rf ./packages/**/node_modules && yarn build-clean",
    "build-clean": "rm -rf ./packages/**/dist && rm -rf ./packages/**/build",
    "test": "npm run test:unit; npm run test:manual; npm run test:examples; npm run test:todomvc",
    "test:unit": "cd ./packages/focal && npm run test",
    "test:manual": "cd ./packages/manual && npm run build",
    "test:examples": "cd ./packages/examples/all && npm run build",
    "test:todomvc": "cd ./packages/examples/todomvc && npm run build",
    "postinstall": "cd ./packages/focal && npm run build"
  },
  "devDependencies": {
    "@grammarly/tslint-config": "0.5.1",
    "@types/node": "^6.0.34",
    "@types/react": "16.0.33",
    "@types/react-dom": "16.0.3",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "tslint": "5.2.0",
    "typescript": "2.4.1",
    "rxjs": "5.5.6"
  },
  "workspaces": [
    "packages/*",
    "packages/examples/*"
  ],
  "resolutions": {
    "@types/react": "16.0.33"
  }
}
