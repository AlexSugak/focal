{
  "private": true,
  "name": "focal",
  "scripts": {
    "build": "cd ./packages/focal && yarn build",
    "clean-all": "rm -rf ./node_modules && rm -rf ./packages/**/node_modules && yarn build-clean",
    "build-clean": "rm -rf ./packages/**/dist && rm -rf ./packages/**/build",
    "postinstall": "cd ./packages/focal && yarn build",
    "test": "yarn test:unit; yarn test:manual; yarn test:examples; yarn test:todomvc",
    "test:unit": "cd ./packages/focal && yarn test",
    "test:manual": "cd ./packages/manual && yarn build",
    "test:examples": "cd ./packages/examples/all && yarn build",
    "test:todomvc": "cd ./packages/examples/todomvc && yarn build",
    "package": "cd ./packages/focal && yarn pack",
    "release": "cd ./packages/focal && yarn release"
  },
  "devDependencies": {
    "@grammarly/tslint-config": "0.5.1",
    "@types/node": "^6.0.34",
    "@types/react": "16.0.33",
    "@types/react-dom": "16.0.3",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "tslint": "5.2.0",
    "typescript": "2.4.1",
    "rxjs": "5.5.6"
  },
  "workspaces": [
    "packages/*",
    "packages/examples/*"
  ],
  "resolutions": {
    "@types/react": "16.0.33"
  }
}
