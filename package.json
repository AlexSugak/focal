{
  "private": true,
  "name": "focal",
  "scripts": {
    "build": "yarn workspace @grammarly/focal build",
    "build-clean": "rm -rf ./packages/**/dist && rm -rf ./packages/**/build",
    "clean-all": "rm -rf ./node_modules && rm -rf ./packages/**/node_modules && yarn build-clean",
    "postinstall": "yarn build",
    "test": "scripts/run_each test",
    "package": "yarn workspace @grammarly/focal pack",
    "release": "yarn workspace @grammarly/focal release"
  },
  "devDependencies": {
    "@grammarly/tslint-config": "0.5.1",
    "tslint": "5.2.0",
    "typescript": "2.4.1"
  },
  "workspaces": [
    "packages/focal",
    "packages/manual",
    "packages/examples/*"
  ],
  "resolutions": {
    "@types/react": "16.0.33"
  }
}
